@{
    ViewData["Title"] = "Home Page";
}


    <section id="home" class="hero">
        <div class="container">
            <h2>Welcome to the Sports Store</h2>
            <p>Your one-stop shop for all sports equipment and apparel.</p>
            <br /> 
            <a href="#products" class="btn">Shop Now</a>
            
            <br /> <br />
        </div>
    </section>

    <section id="about" class="about">
        <div class="container">
            <h2>About Us</h2>
            <p>We provide top-quality sports gear and apparel to help you perform at your best. Whether you're a professional athlete or a weekend warrior, we've got everything you need.</p>
        </div>
    </section>

    <section id="products" class="categories">
        <div class="container">
            <h2>Product Categories</h2>
            <div class="category">
            <a href="~/assets/soccer.webp">  <img src="~/assets/soccer.webp"> </a>
                <h3>Soccer</h3>
            </div>
            <div class="category">
            <a href="~/assets/basketball.jpeg"> <img src="~/assets/basketball.jpeg"> </a>
                <h3>Basketball</h3>
            </div>
            <div class="category">
            <a href="~/assets/tennis.jpeg">  <img src="~/assets/tennis.jpeg"> </a>
                <h3>Tennis</h3>
            </div>

            <div class="category">
            <a href="~/assets/running.png">  <img src="~/assets/running.png"> </a>
                <h3>Running</h3>
            </div>
            <div class="category">
            <a href="~/assets/yoga.jpeg">   <img src="~/assets/yoga.jpeg"> </a>
                <h3>Yoga</h3>
            </div>
            <div class="category">
            <a href="~/assets/swimm.jpg">   <img src="~/assets/swimm.jpg"> </a>
                <h3>Swimming</h3>
            </div>
        </div>
    </section>

    <section id="contact" class="contact">
        <div class="container">
            <h2>Contact Us</h2>
            <form action="#" method="post">
                <div class="form-group">
                    <label for="name">Name:</label>
                    <input type="text" id="name" name="name" required>
                </div>
                <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="email" id="email" name="email" required>
                </div>
                <div class="form-group">
                    <label for="message">Message:</label>
                    <textarea id="message" name="message" rows="5" required></textarea>
                </div>
                <button type="submit" class="btn">Send Message</button>
            </form>
        </div>
    </section>


